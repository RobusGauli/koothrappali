{
  "name": "KoothrappaliBackend",
  "author": "Sameer Poudel <sameerpoudel@lftechnology.com>",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "nodemon ./bin/www",
    "precommit": "lint-staged",
    "lint": "eslint --ignore-path .eslintignore .",
    "lint:fix": "eslint --ignore-path .eslintignore . --fix"
  },
  "dependencies": {
    "cookie-parser": "~1.4.3",
    "debug": "~2.6.9",
    "eslint": "^5.9.0",
    "eslint-config-leapfrog": "^1.0.1",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-prettier": "^3.0.0",
    "express": "~4.16.0",
    "http-errors": "~1.6.2",
    "husky": "^1.2.0",
    "jade": "~1.11.0",
    "lint-staged": "^8.1.0",
    "morgan": "~1.9.0",
    "prettier": "^1.15.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run precommit"
    }
  },
  "lint-staged": {
    "linters": {
      "*.{ts,js}": [
        "eslint --ignore-path .eslintignore . --fix",
        "prettier --single-quote --parser typescript --print-width 120 --write './**/*.{ts,js}'",
        "git add"
      ],
      "*.md": [
        "prettier --parser markdown --print-width 120 --write './**/*.md'",
        "git add"
      ]
    }
  }
}
